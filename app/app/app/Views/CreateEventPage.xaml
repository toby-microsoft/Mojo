<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.Views.CreateEventPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create Event"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="LblEventName" Text="Event Name" VerticalOptions="Start"/>
            <Entry x:Name="EntryEventName" Placeholder="Event Name" VerticalOptions="Start"/>
            <Label x:Name="LblDetails" Text="Details" VerticalOptions="Start"/>
            <Entry x:Name="EntryDetails" Placeholder="Details" VerticalOptions="Start"/>
            <Label x:Name="LblGroup" Text="Group" VerticalOptions="Start"/>
            <Entry x:Name="EntryGroup" Placeholder="Group" VerticalOptions="Start"/>
            <Label x:Name="LblDate" Text="Date" VerticalOptions="Start"/>
            <Entry x:Name="EntryDate" Placeholder="Date" VerticalOptions="Start"/>
            <Button x:Name="BtnSubmit" Text="Submit Event" Clicked="SubmitProcedure" VerticalOptions="Start"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>